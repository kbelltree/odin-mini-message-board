<!DOCTYPE html>
<html lang="en">
  <%- include('head'); %>
  <body>
    <div class="container">
      <h1>Create a message</h1>
      <form method="POST" action="/new">
        <div class="inputContainer">
          <label for="message">Message:</label
          ><input id="message" name="messageText" type="text" />
        </div>
        <div class="inputContainer">
          <label for="author">Author:</label
          ><input id="author" name="messageUser" type="text" />
        </div>
        <button class="btnL">Add To Board</button>
      </form>
      <a href="/" class="btnM">Cancel</a>
    </div>
  </body>
</html>
