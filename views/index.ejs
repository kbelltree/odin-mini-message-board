<!DOCTYPE html>
<html lang="en">
  <%- include('head'); %>
  <body>
    <div class="container">
      <h1><%= title %></h1>
      <a href="/new" class="btnL">Add New Message</a>
      <ul>
        <% for (let i = 0; i < messages.length; i++) { %>
        <li>
          <div class="alignInline">
            <h2>
              <%= messages[i].text.length <= 30 ? messages[i].text : messages[i].text.substring(0, 29) + '...' %>
            </h2>
            <a href="/details/<%= i %>" class="btnS">Open</a>
          </div>
          <p><%= messages[i].user %></p>
          <p><%= messages[i].added %></p>
        </li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
